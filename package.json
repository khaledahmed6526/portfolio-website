{
  "name": "fullstack-portfolio-website",
  "version": "1.0.0",
  "description": "A professional full-stack web application with React, TailwindCSS, Node.js, Express, and MongoDB",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build",
    "postinstall": "cd client && npm install",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "react",
    "node",
    "express",
    "mongodb",
    "fullstack"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "mongodb": "4.1",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.8",
    "resend": "^6.4.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
